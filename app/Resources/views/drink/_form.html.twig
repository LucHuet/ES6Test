<form class="form-inline js-new-rep-log-form" novalidate data-url="{{ path('rep_log_new') }}">
    <div class="form-group">
        <label class="sr-only control-label required" for="rep_log_item">
            What did you drink?
        </label>
        <select id="rep_log_item"
                name="item"
                required="required"
                class="form-control">
            <option value="" selected="selected">What would you drink ?</option>
            <option value="coffee">Coffee</option>
            <option value="chocolate">Chocolate</option>
            <option value="tea">Tea</option>
            <option value="water">Water</option>
        </select></div>

    <div class="form-group">
        <label class="sr-only control-label required" for="rep_log_reps">
            How many drinks ?
        </label>
        <input type="number" id="rep_log_reps"
               name="reps" required="required"
               placeholder="How many drinks?"
               class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">I am thirsty !</button>
</form>
